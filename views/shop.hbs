<div class="row">
  <section class="main col-md-9">
  {{#if data.post}}
    
    <item>
      <div class="row">
        <div class="col-4">
          <h2>{{data.post.title}}</h2>
          <img
            src={{data.post.featureImage}}
            alt="feature Image"
            style="width:110%"
          />

        </div>

        <div class="col-8"><br />
          <br />
          <div class="row">
            <div class="col-12">

              <br/>
               {{data.post.body}}
            <br />
              <strong>Price:</strong>
              {{data.post.price}}
              <br />
              <strong>Category:</strong>
              {{data.post.category}}<br />
              <strong>Last Updated:</strong>
              {{data.post.postDate}}
            </div>
          </div>
        </div>
      </div>
    </item>
  </section>

  <aside class="col-md-3">
    <br /><br />
     {{#if data.post}}
    <h4>Items</h4>
    <ul class="list-group">
      {{#each data.items}}
      <a href="/shop/{{id}}?category={{../viewingCategory}}">{{title}}</a>
      {{/each}}
    </ul>
    {{/if}}

    {{#if data.categories}}
    <h4>Categories</h4>
    <ul class="list-group">
      {{#each data.categories}}
      <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
      {{/each}}
    </ul>
    {{/if}}
  </aside>
</div>
{{else}}
<div class="col-md-12 text-center">
  <h2>{{data.message}}</h2>
   <br /><br />
  <h2>Please try another Post / Category</h2>
</div>
{{/if}}