<div class="row">
  <section class="main col-md-9">
    {{#if data}}
      {{#each data.items}}
      <br>
      <br>
        <div class="item">
          <div class="row">
            <div class="col-4">
              <h2>{{title}}</h2>
              <img
                src="{{featureImage}}"
                alt="feature Image"
                style="width:100%"
              />
            </div>

            <div class="col-8"><br />
              <br />
              <div class="row">
                <div class="col-12">
                  <br/>
                  {{body}}
                  <br />
                  <strong>Price:</strong>
                  {{price}}
                  <br />
                  <strong>Category:</strong>
                  {{category}}<br />
                  <strong>Last Updated:</strong>
                  {{postDate}}
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <br /><br />
        <h2>Please try another Post / Category</h2>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    <br /><br />
    {{#if data.items}}
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.items}}
          <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item">{{category}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>
