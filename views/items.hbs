<div class="row">
    <div class="col-md-12">
        <h2><br><br><br>
        Items
           <a href="/items/add" class="btn btn-success pull-right">Add Post</a> 
        </h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                {{#if data}}
                    {{#each data}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>{{price}}</td>
                        <td><a href="/items?category={{data.post.id}}">{{category}}</a></td>
                        <td>{{published}}</td>
                        <td>
                             <td><a href="/items/delete/{{id}}" class="btn btn-danger">remove</a></td>
                        </td>
                    </tr>
                    {{/each}}
                {{else}}
                    <tr>
                        <td colspan="7" class="text-center"><strong>{{message}}</strong></td>
                    </tr>
                {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>
