<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                {{#if data}}
                    {{#each data}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{title}}</td>
                        <td>{{postDate}}</td>
                        <td>{{price}}</td>
                        <td><a href="/items?category={{data.post.id}}">{{category}}</a></td>
                        <td>{{published}}</td>
                    </tr>
                    {{/each}}
                {{else}}
                    <div class="col-md-12 text-center">
                     {{#unless posts}}
                     <strong>{{message}}</strong>
                     {{/unless}}
                    </div>
                {{/if}}
                </tbody>
            </table>
        </div>
    </div>
</div>